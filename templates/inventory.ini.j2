# This inventory file is automatically generated by Ansible for single-node RKE2 deployment.

[localhost]
127.0.0.1 ansible_connection=local ansible_python_interpreter="/usr/bin/python3"

[masters]
{{ name }} ansible_ssh_host={{ ip }}

[workers]
# Empty - this is a single-node deployment where master handles workloads

[k8s_cluster:children]
masters

# Legacy groups for compatibility
[controllers:children]
masters

[agents:children]
workers

[nodes:children]
masters

[all:vars]
ansible_ssh_port=22
ansible_user='{{ user }}'
ansible_ssh_extra_args='-o StrictHostKeyChecking=no'
ansible_ssh_private_key_file={{ key }}
ansible_python_interpreter="/usr/bin/python3"

rke2_version='v{{ version }}+rke2r1'
rke2_token='defaultSecret12345'
rke2_additional_sans=['{{ ip }}', '0.0.0.0']
rke2_bind_address='0.0.0.0'
rke2_disable=['rke2-traefik', 'rke2-ingress-nginx']
rke2_debug=true
